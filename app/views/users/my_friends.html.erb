<h1>My Friends</h1>

<h3>Search for Friends</h3>
<%= flash[:error] if flash[:error] %>
<div class="" id="stock-lookup">
  <%= form_with url: search_stocks_path, method: :get, id: "stock-lookup-form" do |f| %>
    <div class="form-group row no-padding text-center col-xs-12 custom-stock-search-form">
      <div class="col-sm-9">
        <%= f.text_field :stock, placeholder:"Stock Ticker Symbol", autofocus: true,
                                               class:"form-control search-box input-lg" %>
      </div>
      <div class="col-sm-2">
        <%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>
          <i class="fa fa-search"></i> Look up a stock
        <% end %>
      </div>
    </div>
  <% end %>
</div>

<div class="" id="search-results">
  <%= render 'friends_result' %>
</div>

<%= render 'friendships/list' %>
