<% if params[:action] == 'search'  %>
  <div class="search-notification text-center col-xs-12 ">
    <%= bootstrap_flash %>
  </div>
<% end %>
<% if @stock %>
<div class="well results-block col-xs-12 text-center">
  <div class="row">
    <div class="col-xs-9">
      <strong>Symbol:</strong> <%= @stock.ticker %>
      <strong>Symbol:</strong> <%= @stock.name %>
      <strong>Symbol:</strong> <%= @stock.last_price %>
    </div>
    <div class="col-xs-3">
      <% if current_user.can_add_stock?(@stock.ticker) %>
      <%= link_to "Add to my portfolio", user_stocks_path(user:current_user, stock_ticker: @stock.ticker),
                                         method: :post, class:"btn btn-xs btn-success" %>
      <% elsif current_user.already_added?(@stock.ticker) %>
        <%= link_to "Remove from my portfolio", user_stock_path(current_user.id),
                                                method: :delete, class:"btn btn-xs btn-danger" %>
      <% else %>
        Hi
      <% end %>

    </div>
  </div>

</div>
<% end %>
