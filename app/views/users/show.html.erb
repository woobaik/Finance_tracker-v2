<h1>User Profile</h1>

<dl class="dl-horizontal">
  <dt>
    <strong>Full Name ::</strong>
  </dt>
  <dd> <%= @user.full_name %> </dd>
  <dt>
    <strong>Email ::</strong>
  </dt>
  <dd> <%= @user.email %> </dd>
</dl>

<% if @user.stocks.any? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">
    This User is not tracking any stocks
  </p>
<% end %>
