<% if current_user.stocks.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <td><strong>NAME</strong></td>
        <td><strong>SYMBOL</strong></td>
        <td><strong>CURRENT_PRICE</strong></td>

      </tr>
    </thead>
    <tbody>
      <% current_user.stocks.each do |user_stock| %>
      <tr>
        <td> <%= user_stock.name %></td>
        <td> <%= user_stock.ticker %></td>
        <td> $ <%= user_stock.last_price %></td>
        <% if @user.id == current_user.id %>
          <td>
            <%= link_to "DELETE FROM PORTFOLIO", user_stock_path(user_stock),
                            class: "btn btn-xs btn-success", method: :delete %>
          </td>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
